<?xml version="1.0" encoding="UTF-8"?>
<wdkModel>
    <modelName displayName="TemplateDB" version="1.0"/>

    <!-- ******************* -->
    <!-- model introduction  -->
    <!-- ******************* -->
    <introduction><![CDATA[
        Welcome to Strategies WDK Template Site, a sample website driven by the Strategies Web Development Kit.  The site uses sample data and a simple model to demonstrate the core functions of the WDK.  Please see <a href="http://www.gusdb.org/wdk">www.gusdb.org/wdk</a> for more details about the Strategies WDK.]]>
        </introduction>
    
    <!-- import the pieces -->
    <import file="templateModel/records/rnaRecord.xml" />
    <import file="templateModel/records/rnaRecordQueries.xml" />
    <import file="templateModel/questions/rnaQuestions.xml" />
    <import file="templateModel/questions/rnaIdQueries.xml" />

    <import file="templateModel/records/estRecord.xml" />
    <import file="templateModel/records/estRecordQueries.xml" />
    <import file="templateModel/questions/estQuestions.xml" />
    <import file="templateModel/questions/estIdQueries.xml" />

    <import file="templateModel/records/zipcodeRecord.xml" />
    <import file="templateModel/records/zipcodeRecordQueries.xml" />
    <import file="templateModel/questions/zipcodeQuestions.xml" />
    <import file="templateModel/questions/zipcodeIdQueries.xml" />

    <import file="templateModel/records/xmlRecords.xml" />
    <import file="templateModel/questions/xmlQuestions.xml" />


    <import file="templateModel/questions/nestedQuestions.xml" />

    <import file="templateModel/queries.xml" />

    <!-- Categories for driving menus -->
    <import file="templateModel/questions/categories.xml"/>


    <!-- parameters used by queries -->

    <paramSet name="params">

        <stringParam name="NumSeqs" 
                     prompt="Number of Contained Sequences" 
                     regex="\d+">
            <help>number of seqs</help>
            <suggest default="2" />
        </stringParam>

        <stringParam name="na_sequence_id"
                     prompt="NestedRecord Param">
            <help>Only used in a nested record</help>
            <suggest default="91619386" />
        </stringParam>

        <stringParam name="NumEstLibs" 
                     prompt="Number of EST Libs" 
                     regex="\d+">
            <help>number of distinct libs</help>
            <suggest sample="3" default="3"/>
        </stringParam>

        <stringParam name="AssemblyConsistency" 
                     prompt="Assembly consistency score" 
                     regex="100|\d|\d{2}">
            <help>on the scale of 0-100</help>
            <suggest sample="95" default="95"/>
        </stringParam>

        <stringParam name="Application" 
                     prompt="flavors of blast application">
            <help>flavors of blast application</help>
            <suggest sample="blastn" default="blastn"/>
        </stringParam>

        <stringParam name="Database" 
                     prompt="Rna Blast Database">
            <help>Rna Blast Database</help>
            <suggest sample="RNAs" default="RNAs"/>
        </stringParam>

        <stringParam name="Sequence" 
                     prompt="Blast Input Sequence">
            <help>Blast Input Sequence</help>
            <suggest default="AGCAGCACGGAGGGCAACTGAAAATTCTCTGTTTTGTACTCCAAGCCAAGAAACTCCCCTTGTCATTTACGAGGACTGAACCACGGAAGAATAACTGTGTCACT" />
        </stringParam>

        <flatVocabParam name="ApiTaxon" 
                        prompt="Organism"
                        multiPick="true"
                        queryRef="VocabQueries.ApiTaxon">
            <help>Apicomplexon taxons</help>
        </flatVocabParam>

        <flatVocabParam name="EstLib" 
                        prompt="EST Library" 
                        queryRef="VocabQueries.EstLib">
            <help>Library from which EST originate</help>
        </flatVocabParam>

        <stringParam name="ZipCode" 
                     prompt="Zip code">
            <help>Zip code</help>
            <suggest sample="19104" default="19104"/>
        </stringParam>

        <stringParam name="AreaCode"
                     prompt="Area code">
            <help>Area code</help>
            <suggest sample="215" default="215"/>
        </stringParam>
        
        <enumParam name="sample_sum_row"
                   prompt="Rows">
            <enumList>
                <enumValue>
                    <term>Row A</term>
                    <internal>A</internal>
                </enumValue>
                <enumValue>
                    <term>Row B</term>
                    <internal>B</internal>
                </enumValue>
            </enumList>
        </enumParam>
        
        <enumParam name="sample_sum_column"
                   prompt="Columns">
            <enumList>
                <enumValue>
                    <term>Column 1</term>
                    <internal>1</internal>
                </enumValue>
                <enumValue>
                    <term>Column 2</term>
                    <internal>2</internal>
                </enumValue>
            </enumList>
        </enumParam>
        
        <answerParam name="rna_answer"
                     recordClassRef="RnaRecordClasses.RnaRecordClass"
                     prompt="RNA Answer" />
                             
        <answerParam name="est_answer"
                     recordClassRef="EstRecordClasses.EstRecordClass"
                     prompt="EST Answer" />
                             
        <answerParam name="zip_answer"
                     recordClassRef="ZipRecordClasses.ZipRecordClass"
                     prompt="ZIP Answer" />
                             
    </paramSet>

</wdkModel>
